<Window x:Class="JobLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobLogger"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="todayLabel" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" MouseDown="todayLabel_MouseDown"/>
        <Label x:Name="totalMinutesLabel" Content="Label" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="38"/>
        <ListBox x:Name="recordsList" Margin="10,41,10,10"/>
        <Button x:Name="reloadButton" Content="Reload" HorizontalAlignment="Right" Margin="0,10,53,0" VerticalAlignment="Top" Width="75" Click="reloadButton_Click"/>

    </Grid>
</Window>

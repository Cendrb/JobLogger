<Window x:Class="JobLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobLogger"
        mc:Ignorable="d"
        Title="MainWindow" Height="351.726" Width="526.227">
    <Grid>
        <Label x:Name="todayLabel" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" MouseDown="TodayLabel_MouseDown"/>
        <Label x:Name="totalTimeLabel" Content="Label" Margin="0,7,125,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="63" HorizontalContentAlignment="Center" FontSize="14"/>
        <ListBox x:Name="recordsList" Margin="10,41,125,10"/>
        <Button x:Name="reloadButton" Content="Reload" HorizontalAlignment="Right" Margin="0,13,193,0" VerticalAlignment="Top" Width="75" Click="ReloadButton_Click"/>
        <DatePicker x:Name="currentDateDatePicker" Margin="0,12,273,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="102" FirstDayOfWeek="Monday" IsTodayHighlighted="True" SelectedDateChanged="CurrentDateDatePicker_SelectedDateChanged" />
        <Grid x:Name="teaTimerGrid" HorizontalAlignment="Right" Height="304" Margin="0,7,10,0" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>

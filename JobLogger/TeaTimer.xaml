<UserControl x:Class="JobLogger.TeaTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobLogger"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label x:Name="timeRemainingLabel" Content="Label" Margin="10,5,10,0" VerticalAlignment="Top" Height="35" FontSize="18" HorizontalContentAlignment="Center"/>
        <StackPanel x:Name="timeSelectStackPanel" Margin="10,84,10,10"/>
        <Button x:Name="startStopButton" Content="Start/Stop" Margin="10,45,10,0" VerticalAlignment="Top" Height="34" Click="startStopButton_Click"/>

    </Grid>
</UserControl>
